section.section.login
    .float-square.float-square_login
        .login__content
            h2.login__title.subtitle АВТОРИЗУЙТЕСЬ
            form(id="login-form", class="login-form" action="php/action.php", method="post", enctype="multipart/form-data")
                input(type="text", name="name", placeholder="Логин").input-area
                input(type="password", name="password", placeholder="Пароль").input-area
                .human-checkbox
                    label(class="input-radio")
                        input(type="radio" class="radio" checked)
                        .human-radio Я человек
                .bot-checkbox
                    p Вы точно не робот?
                    .bot-checkboxes
                        label(class="input-radio")
                            input(type="radio" class="clear-radio clear-radio_checked")
                            .bot-radio__yes Да
                        label(class="input-radio")
                            input(type="radio" class="clear-radio")
                            .bot-radio Не уверен
        .login-btns
            .main-btn
            .login-btn


